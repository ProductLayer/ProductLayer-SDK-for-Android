<resources>

    <attr name="cardBackground" format="color"/>
    <attr name="friendBackground" format="color"/>

    <attr name="textColorAccent" format="color"/>
    <attr name="textColorOnAccentBg" format="color"/>

    <attr name="imagePlaceholder" format="color"/>

    <attr name="textAppearanceCaption" format="reference"/>
    <attr name="textAppearanceBody1" format="reference"/>
    <attr name="textAppearanceBody2" format="reference"/>
    <attr name="textAppearanceSubhead" format="reference"/>
    <attr name="textAppearanceTitle" format="reference"/>
    <attr name="textAppearanceHeadline" format="reference"/>
    <attr name="textAppearanceDisplay1" format="reference"/>
    <attr name="textAppearanceDisplay2" format="reference"/>
    <attr name="textAppearanceDisplay3" format="reference"/>
    <attr name="textAppearanceDisplay4" format="reference"/>
    <attr name="textAppearanceLevelOverlay" format="reference"/>
    <attr name="textAppearanceLikesOverlay" format="reference"/>
    <attr name="textAppearanceDislikesOverlay" format="reference"/>

    <attr name="buttonStyleHighlighted" format="reference"/>
    <attr name="borderlessButtonStyleHighlighted" format="reference"/>

    <attr name="dialogHeader" format="reference"/>
    <attr name="dialogBody" format="reference"/>
    <attr name="dialogBodyWide" format="reference"/>

    <attr name="speechBubbleShape" format="reference"/>
    <attr name="speechBubbleBackground" format="reference"/>

    <declare-styleable name="CurrentUser">

        <attr name="showFullName" format="boolean"/>
        <attr name="avatarSize" format="dimension"/>
        <attr name="userImageUrl" format="string"/>
        <attr name="userFullName" format="string"/>
        <attr name="userName" format="string"/>
        <attr name="userPoints" format="integer"/>

    </declare-styleable>

    <declare-styleable name="LikeView">

        <attr name="likeType" format="enum">
            <enum name="product" value="0"/>
            <enum name="opine" value="1"/>
            <enum name="image" value="2"/>
        </attr>
        <attr name="objectId" format="string"/>
        <attr name="iconSize" format="enum">
            <enum name="normal" value="0"/>
            <enum name="mini" value="1"/>
        </attr>
        <attr name="iconColor" format="color"/>
        <attr name="iconColorActive" format="color"/>

    </declare-styleable>

</resources>
