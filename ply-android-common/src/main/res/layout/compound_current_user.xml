<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:contentDescription="@string/user_image"/>

    <TextView
        android:id="@+id/level_text"
        style="?attr/textAppearanceLevelOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/user_image"
        android:layout_alignRight="@id/user_image"
        android:layout_marginRight="4dp"
        android:background="@color/transparent"/>

    <TextView
        android:id="@+id/user_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_image"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/user_image"
        android:background="@color/transparent"
        android:textColor="?android:attr/textColorPrimary"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_full_name"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/user_image"
        android:background="@color/transparent"
        android:textColor="?android:attr/textColorPrimary"/>

    <TextView
        android:id="@+id/level_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/level_text"
        android:layout_alignLeft="@id/user_name"
        android:layout_below="@id/user_name"
        android:background="@color/transparent"
        android:textSize="12sp"/>

</merge>
